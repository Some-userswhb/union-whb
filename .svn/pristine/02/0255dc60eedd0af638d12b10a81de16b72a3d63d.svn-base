<body class="gray-bg">
<div class="row" id="adduserrole">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal m-t" id="signupForm" v-cloak>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red;">*</span>&nbsp;用户名称：</label>
                        <div class="col-sm-8">
                            <input id="userName" v-model="userInfo.userName" class="form-control" type="text" aria-required="true"
                                   aria-invalid="false" class="valid">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red;">*</span>&nbsp;所属角色：</label>
                        <div class="col-sm-8">
                            <select class="form-control" id='roleId' v-model='userInfo.roleId' aria-required="true" aria-invalid="false" class="valid">
                                <option v-for="item in rolelist" v-bind:value="item.id">
                                    {{item.roleName}}
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red;">*</span>&nbsp;所属会员：</label>
                        <div class="col-sm-8" >
                            <select class="form-control" id='memNumber' v-model='userInfo.ext1' aria-required="true"
                                    aria-invalid="false" class="valid">
                                <option v-for="item in a10BaseList" v-bind:value="item.id">
                                    {{item.name}}
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">&nbsp;备注：</label>
                        <div class="col-sm-8" >
                            <input id="remark" v-model="userInfo.remark" class="form-control" type="text" aria-required="true" aria-invalid="false" class="valid">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3">
                            <button class="btn btn-primary" type="submit">确定</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!-- 全局js -->
<script src="js/jquery.min.js?v=2.1.4"></script>
<script src="js/bootstrap.min.js?v=3.3.6"></script>
<script src="js/vue2.5.22.js"></script>
<script src="js/ixios.0.18.0.js"></script>
<script src="js/qs.6.60.js"></script>
<script src="js/baseaddr.js"></script>
<script src="js/plugins/layer/layer.min.js"></script>
<script src="js/plugins/validate/jquery.validate.min.js"></script>
<script src="js/demo/form-validate-sytle.js"></script>

<script src="js/plugins/validate/messages_zh.min.js"></script>
<script src="js/plugins/iCheck/icheck.min.js"></script>

<script>
    const vm = new Vue({
        el: '#adduserrole',
        data: {
            systemCode:"S1003",
            a10BaseList: [],
            rolelist: [],
            roleName:'',
            id:'',
            userInfo:''
        },
        methods: {
            checkItem(item) {
                console.log(item)
            },
            getUserInfo(){
                var that = this;
                axios({
                    method: 'post',
                    headers: {'Content-Type': 'application/json'},
                    url: userUrl + "/sso/ssoUser/query",
                    data: {
                        "id":that.id
                    }
                }).then(function (res) {
                    if(res.data.code === '0'){
                        that.userInfo = res.data.data
                    }
                });
            },
            getA1Omem() {
                var that = this;
                axios({
                    method: 'post',
                    url: baseUrl+"/passLaborweb/api/laborun/a10BaseInfo/getA10BaseList",
                    data: {
                        "memNumber": ""
                    }
                }).then(function (res) {
                    if(res.data.code === '0'){
                        that.a10BaseList = res.data.data
                    }
                });
            },
            getRoles(){
                var that = this;
                axios({
                    method: 'post',
                    headers: {'Content-Type': 'application/json'},
                    url: userUrl + "/sso/ssoRole/getRoleList",
                    data: JSON.stringify({
                        "systemCode": that.systemCode
                    })
                }).then(function (res) {
                    if(res.data.code === '0'){
                        that.rolelist = res.data.data
                    }
                });
            },
            saveUser(){
                var that = this;
                axios({
                    method: 'post',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    url: userUrl + "/sso/ssoUser/update",
                    data: Qs.stringify({
                        id: that.id,
                        userName: $("#userName").val(),
                        roleId: $("#roleId").val(),
                        ext1: $("#memNumber").val(),
                        remark:  $("#remark").val()
                    })
                }).then(function (res) {
                    if (res.data.code === '0') {
                        layer.msg("编辑成功", {icon: 1, time: 1000})
                        setTimeout(function (){
                            var index = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(index);
                        }, 1000);
                    } else {
                        layer.msg(res.data.msg, {icon: 2, time: 3000})
                    }
                }) .catch(error => {
                    layer.msg("服务器繁忙，请稍后再试", {icon: 2, time: 1000})
                    console.log(error)
                })
            }
        },
        mounted(){
            var that = this;
            var url = location.search; //获取url中"?"符后的字串
            console.log(url);
            var theRequest = new Object();
            if (url.indexOf("?") != -1) {
                var str = url.substr(1);
                strs = str.split("&");
                that.id= decodeURIComponent(strs[0].split("=")[1]);
            }
            that.getUserInfo()
            that.getA1Omem()
            that.getRoles()
        }

    })
</script>
<!-- jQuery Validation plugin javascript-->
<<script type="text/javascript">

    $().ready(function () {
        var icon = "<i class='fa fa-times-circle'></i> ";
        $("#signupForm").validate({
            onsubmit:true,

            rules: {
                userName: "required"
            },
            messages: {
                userName: icon + "请输入用户名称",
            },
            submitHandler: function (form) {
                vm.saveUser()
            }
        });
    })



</script>


</body>

