<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>添智·智慧工会云服务平台</title>
    <meta name="keywords">
    <meta name="description">

    <link rel="shortcut icon" href="favicon.ico">
    <link href="css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="css/animate.css" rel="stylesheet">
    <link href="css/style.css?v=4.1.0" rel="stylesheet">

</head>
<style>
    .col-sm-8 input.form-control, .col-sm-8 select.form-control {
        width: 50%;
        display: inline-block;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .time-cen{
        float: left;
        margin: 8px 10px;
    }
    .form-group .col-sm-5 input{
        float: left;
    }
</style>
<body>
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal m-t" id="transfer" v-cloak>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">文件类型名称：</label>
                        <div class="col-sm-8">
                            <input id="fileKindName" name="fileKindName" class="form-control" type="text" aria-required="true"
                                   aria-invalid="false" class="valid">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">文件类型描述：</label>
                        <div class="col-sm-8">
                            <input id="fileKindConcent" name="fileKindConcent" class="form-control" type="text" aria-required="true"
                                   aria-invalid="false" class="valid">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3">
                            <button class="btn btn-primary" type="submit">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- 全局js -->
<script src="js/jquery.min.js?v=2.1.4"></script>
<script src="js/bootstrap.min.js?v=3.3.6"></script>
<script src="js/baseaddr.js"></script>
<script src="js/plugins/layer/layer.min.js"></script>

<script src="js/vue2.5.22.js"></script>
<script src="js/ixios.0.18.0.js"></script>
<script src="js/qs.6.60.js"></script>
<!-- 自定义js -->
<!-- jQuery Validation plugin javascript-->
<script src="js/plugins/validate/jquery.validate.min.js"></script>
<script src="js/demo/form-validate-sytle.js"></script>
<script src="js/plugins/validate/messages_zh.min.js"></script>
<script src="js/plugins/layer/laydate/laydate.js"></script>


<script>

    var vm = new Vue({
        el:'#transfer',
        data:{
        },
        methods:{
            saveFileKind(){
                var that = this
                axios({
                    method: 'post',
                    url: baseUrl + "/passLaborweb/api/laborun/fileKindManager/add",
                    headers: {'Content-Type': 'application/json'},
                    data: JSON.stringify({
                        "fileKindName": $('#fileKindName').val(),
                        "fileKindConcent": $('#fileKindConcent').val()
                    })
                }).then((res) => {
                    if(res.data.code ==='0'){
                        layer.msg("添加成功", {icon: 1, time: 1000})
                        setTimeout(function (){
                            var index = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(index);
                        }, 1000);
                    }else{
                       layer.msg(res.data.msg, {icon: 2, time: 3000})
                    }
                }).catch(error => {
                   layer.msg(res.data.msg, {icon: 2, time: 3000})
                })

            }
        },
        mounted(){

        }
    })


    $().ready(function () {
        var icon = "<i class='fa fa-times-circle'></i> ";
        $("#transfer").validate({
            onsubmit:true,

            rules: {
                fileKindName: {
                    "required":true,
                    maxlength:50
                },
            },
            messages: {
                fileKindName: {
                    "required": icon + "请输入文件类型名称",
                    maxlength: "最大长度为50字符"
                }
            },
            submitHandler: function (form) {
                vm.saveFileKind()
            }
        });
    })


</script>

</body>
</html>
