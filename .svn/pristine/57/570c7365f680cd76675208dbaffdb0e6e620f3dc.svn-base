<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>添智·智慧工会云服务平台</title>
    <meta name="keywords">
    <meta name="description">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="css/animate.css" rel="stylesheet">
    <link href="css/style.css?v=4.1.0" rel="stylesheet">
</head>
<style>
    .col-sm-8 input.form-control, .col-sm-8 select.form-control {
        width: 50%;
        display: inline-block;
    }


</style>
<body>
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal m-t" id="legalAdd" v-cloak>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">所属工会：</label>
                        <div class="col-sm-8">
                            <select class="form-control" id='laborunName' name="laborunName" v-model="laborunName">

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">统一社会信用代码：</label>
                        <div class="col-sm-8">
                            <input id="socialCreditCode" name="socialCreditCode" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">工会法人：</label>
                        <div class="col-sm-8">
                            <select class="form-control" id='dutyName' name="dutyName">
                                <option value="1">主席</option>
                                <option value="2">副主席</option>
                            </select>
                            <button class="btn btn-primary" type="button" @click="getDutyName">添加</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">法人信息：</label>
                        <div class="col-sm-8">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>法人姓名</th>
                                        <th>会员证号</th>
                                        <th>证件号</th>
                                        <th>工会职务</th>
                                        <th>操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr v-for="(item,key) in addmsg">
                                        <td>{{item.memName}}</td>
                                        <td>{{item.memNumber}}</td>
                                        <td>{{item.cardNo}}</td>
                                        <td>{{item.dutyName}}</td>
                                        <td>
                                            <i class="fa fa-trash" @click="deleteLegal"></i>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">收入信息：</label>
                        <div class="col-sm-8">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>上年结余累计</th>
                                        <th>年会员会费</th>
                                        <th>年2%经费留成</th>
                                        <th>其他收入</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td> <input id="lastYearBalance" name="lastYearBalance"  placeholder="" type="text">元</td>
                                        <td> <input id="annualMemsFee" name="annualMemsFee"  placeholder="" type="text">元</td>
                                        <td> <input id="annualFunds" name="annualFunds"  placeholder="" type="text">元</td>
                                        <td> <input id="otherIncome" name="otherIncome"   placeholder="" type="text">元</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">资金情况：</label>
                        <div class="col-sm-8">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>固定资金</th>
                                        <th>流动资金</th>
                                        <th>其他</th>
                                        <th>合计</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td><input id="fixedCapital" name="fixedCapital" v-model.number="fixedCapital"  placeholder="" type="text">元</td>
                                        <td><input id="workingCapital" name="workingCapital"  v-model.number="workingCapital"  placeholder="" type="text">元</td>
                                        <td><input id="otherCapital" name="otherCapital" v-model.number="otherCapital"  placeholder="" type="text">元</td>
                                        <td> {{capitalSum}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group juzhong2">
                        <label class="col-sm-3 control-label">场所情况：</label>
                        <div class="col-sm-8">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        <th>办公场所</th>
                                        <th>活动场所</th>
                                        <th>其他场所</th>
                                        <th>合计</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td> <input id="office" name="office" v-model.number="office"  placeholder="" type="text">平方米</td>
                                        <td> <input id="activities" name="activities"  v-model.number="activities" placeholder="" type="text">平方米</td>
                                        <td> <input id="otherPlace" name="otherPlace" v-model.number="otherPlace" placeholder="" type="text">平方米</td>
                                        <td> {{officeSum}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">民事责任能力：</label>
                        <div class="col-sm-8">
                            <textarea id="civilLiability" name="civilLiability" class="form-control" style="resize: none" ></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3">
                            <input type="submit" class="btn btn-primary" value="保存">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- 全局js -->
<script src="js/jquery.min.js?v=2.1.4"></script>
<script src="js/bootstrap.min.js?v=3.3.6"></script>
<script src="js/vue2.5.22.js"></script>
<script src="js/ixios.0.18.0.js"></script>
<script src="js/qs.6.60.js"></script>
<script src="js/baseaddr.js"></script>
<script src="js/plugins/layer/layer.min.js"></script>

<!-- jQuery Validation plugin javascript-->
<script src="js/plugins/validate/jquery.validate.min.js"></script>
<script src="js/demo/form-validate-sytle.js"></script>
<script src="js/plugins/validate/messages_zh.min.js"></script>
<script src="js/demo/form-validate-demo.js"></script>

<script>
    var vm = new Vue({
        el: '#legalAdd',
        data: {
            addmsg: [],
            office: '',
            activities: '',
            otherPlace:'',
            fixedCapital:'',
            workingCapital:'',
            otherCapital:'',
            laborunName:''
        },
        methods: {
            getDutyName: function () {
                    var that = this;
                    if($('#laborunName').val()===null || $('#laborunName').val()===''){
                        layer.confirm("请先选择所属工会", {icon: 2, btn :[ '确定' ]})
                        return ;
                    }else{
                        if(that.addmsg.length === 1){
                            layer.confirm("工会法人已添加，请删除之后再添加", {icon: 2, btn :[ '确定' ]})
                            return ;
                        }else{
                            axios({
                                method: 'post',
                                headers: {'Content-Type': 'application/json'},
                                url: baseUrl + "/passLaborweb/api/laborun/laborunDuty/queryRecord",
                                data: JSON.stringify({
                                    "laborunCode": $('#laborunName').val(),
                                    "dutyType": $('#dutyName').val()
                                })
                            }).then((res) => {
                                if (res.data.code === '0') {
                                    if (res.data.data === null || res.data.data.length === 0) {
                                        layer.msg("该工会职务未任职，请先任职", {icon: 2, time: 2000})
                                    } else {
                                        that.addmsg.push(res.data.data[0])
                                        console.log( that.addmsg)
                                    }
                                } else {
                                   layer.msg(res.data.msg, {icon: 2, time: 3000})
                                }
                            });
                        }
                    }
            },
            saveLegal: function () {
                var that = this
                if(that.addmsg.length === 0){
                    layer.msg("请选择工会法人", {icon: 2, time: 1000})
                }else {
                    axios({
                        method: 'post',
                        url: baseUrl + "/passLaborweb/api/laborun/laborunLegal/add",
                        contentType: 'x-www-form-urlencoded',
                        data: Qs.stringify({
                            "laborunCode": $('#laborunName').val(),
                            "memNumber": that.addmsg[0].memNumber,
                            "dutyType": $('#dutyName').val(),
                            "socialCreditCode": $('#socialCreditCode').val(),
                            "lastYearBalance": $('#lastYearBalance').val(),
                            "annualMemsFee": $('#annualMemsFee').val(),
                            "annualFunds": $('#annualFunds').val(),
                            "otherIncome": $('#otherIncome').val(),
                            "fixedCapital": $('#fixedCapital').val(),
                            "workingCapital": $('#workingCapital').val(),
                            "otherCapital": $('#otherCapital').val(),
                            "office": $('#office').val(),
                            "activities": $('#activities').val(),
                            "otherPlace": $('#otherPlace').val(),
                            "civilLiability": $('#civilLiability').val()
                        })
                    }).then((res) => {
                        if (res.data.code === '0') {
                            layer.msg("添加成功", {icon: 1, time: 1000})
                            setTimeout(function (){
                                var index = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(index);
                            }, 1000);
                        } else {
                           layer.msg(res.data.msg, {icon: 2, time: 3000})
                        }
                    })
                        .catch(error => {
                            layer.msg("服务器繁忙，请稍后再试", {icon: 2, time: 2000})
                            console.log(error)
                        })
                }
            },
            deleteLegal(){
                var that  = this
                that.addmsg = [];
            }
        },
        mounted() {
            var that  = this
            var url = location.search; //获取url中"?"符后的字串
            var theRequest = new Object();
            axios({
                method: 'get',
                url: baseUrl + "/passLaborweb/api/laborun/union/getLaborunList",
                data: {
                    "laborunName": ""
                }
            }).then(function (res) {
                var stationEnum = "<option value=''>请选择</option>";
                $.each(res.data.data, function (index, item) {
                    stationEnum += "<option value='" + item.laborun_code + "'>" + item.laborun_name + "</option>"
                })
                $('#laborunName').html(stationEnum)
                if (url.indexOf("?") != -1) {
                    var str = url.substr(1);
                    strs = str.split("&");
                    that.laborunName= decodeURIComponent(strs[0].split("=")[1]);
                    if(that.laborunName !==undefined && that.laborunName !==null){
                        $('#laborunName').attr("disabled","disabled");
                    }
                }

            });
           /* if(that.addmsg.length ===0){
                that.getDutyName();
            }*/
        },
        computed: {
            officeSum: function () {
              /*  var office = this.office=== ''? 0 : parseInt(this.office);
                var activities = this.activities=== ''? 0 : parseInt(this.activities);
                var otherPlace = this.otherPlace=== ''? 0 : parseInt(this.otherPlace);*/
                if( this.office=== ''&& this.activities=== ''&&  this.otherPlace=== ''){
                    return ''
                }else{
                    return parseFloat(this.office+this.activities+this.otherPlace).toFixed(2)

                }
            },
            capitalSum: function () {
              /*  return this.fixedCapital=== ''? parseFloat(0):parseFloat(this.fixedCapital)
                    + this.workingCapital ===''? parseFloat(0):parseFloat(this.workingCapital)
                    + this.otherCapital ==='' ? parseFloat(0): parseFloat(this.otherCapital);*/
                if( this.fixedCapital=== ''&& this.workingCapital=== ''&&  this.otherCapital=== ''){
                    return ''
                }else{
                    return parseFloat(this.fixedCapital + this.workingCapital + this.otherCapital).toFixed(2)

                }
            }
        }
    })
</script>
<script>
    $().ready(function () {
        var icon = "<i class='fa fa-times-circle'></i> ";
        $("#legalAdd").validate({
            onsubmit:true,

            rules: {
                laborunName: {
                    "required":true
                },
                socialCreditCode: "required",
                lastYearBalance: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                annualMemsFee: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                annualFunds: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                otherIncome: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                fixedCapital: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                workingCapital: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                otherCapital: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                office: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                activities: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                otherPlace: {
                    number: true,
                    minNumber:true,
                    min:0
                },
                civilLiability: {
                    maxlength:500
                }
            },
            messages: {
                laborunName: {
                    "required": icon + "请选择所属工会"
                },
                socialCreditCode: icon + "请输入统一社会信用代码",
                lastYearBalance: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                annualMemsFee: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                annualFunds: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                otherIncome: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                fixedCapital: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                workingCapital: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                otherCapital:{
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                office: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                activities: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                otherPlace: {
                    number: icon + "请输入数字",
                    minNumber: icon + "输入数字最多小数点后两位",
                    min: icon + "请输入大于0的数值"
                },
                civilLiability: {
                    maxlength: icon + "请输入500字以内"
                }
            },
            submitHandler: function (form) {
                vm.saveLegal()
            }
        });
    })


</script>
</body>

</html>
